<h1>New Question</h1>

<%= form_with(model: @question, local: true) do |form| %>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: 'Select a category' %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', questions_path %>